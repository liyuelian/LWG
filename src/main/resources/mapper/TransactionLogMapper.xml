<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.li.lwg.mapper.TransactionLogMapper">

    <resultMap id="BaseResultMap" type="com.li.lwg.entity.TransactionLog">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="mission_id" property="missionId" jdbcType="BIGINT"/>
        <result column="amount" property="amount" jdbcType="BIGINT"/>
        <result column="balance_after" property="balanceAfter" jdbcType="BIGINT"/>
        <result column="type" property="type" jdbcType="TINYINT"/>
        <result column="asset_type" property="assetType"  jdbcType="TINYINT"/>
        <result column="order_no" property="orderNo" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, mission_id, amount, balance_after,
          `type`,asset_type, order_no, remark, create_time
    </sql>

    <insert id="insert" parameterType="com.li.lwg.entity.TransactionLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_transaction_log
        (user_id, mission_id, amount, balance_after,
         type, asset_type, order_no, remark, create_time)
        VALUES (#{userId}, #{missionId}, #{amount}, #{balanceAfter},
                #{type}, #{assetType}, #{orderNo}, #{remark}, NOW())
    </insert>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_transaction_log
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

</mapper>